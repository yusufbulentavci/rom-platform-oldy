--@DEPENDS:.base


--@TABLE nores clp
CREATE TABLE bilgi.buyukluk
(
	id integer primary key,
	boolean sonradan not null
);
--@END

--@DATA name=buyukluk table=bilgi.buyukluk cols=id,sonradan 
$-uzunluk-	false
$-kutle-	false
$-zaman-	false
--@END


--@TABLE nores clp
CREATE TABLE bilgi.birim
(
	id integer primary key,
	buyukluk integer references bilgi.buyukluk(id),
	kisaltma integer,
	carpan	bigint,
	bolen	bigint
);
--@END

--@DATA name=birim table=bilgi.birim cols=id,buyukluk,kisaltma,carpan,bolen 
$-metre-	$-uzunluk-	$-m-	1	1
