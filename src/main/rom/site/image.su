--@FUNCTION before=com.bilgidoku.rom.web.db.image.makepng
create function site.files_imagemakepng(a_host integer,a_self text, p_uri text)
 returns boolean as $$
declare 
begin
	insert into site.files (host_id,p_uri,container,html_file,delegated,ownercid,gid,relatedcids,mask,
				title,multilang_icon,langcodes,
				metas,icon,medium_icon,large_icon) 
				(select * from site.files where host_id=a_host and uri=a_self); 
	return true;
end;
$$ language 'plpgsql';
--@END
